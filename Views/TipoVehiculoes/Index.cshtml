@model List<Autos.ViewModel.ViewModelVehiculoTipoVehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activar</label>
                }
                else
                {
                    <label>Desactivar</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoVehiculo">Modificar</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoVehiculo">Detalle</a> |
                @if (item.Estado == 1)
                {
                    <a asp-action="Desactivar" asp-route-id="@item.CodigoVehiculo">Desactivar</a>
                }
                else
                {
                    <a asp-action="Activar" asp-route-id="@item.CodigoVehiculo">Activar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
